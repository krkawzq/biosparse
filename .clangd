Index:
    Background: Build

CompileFlags:
    CompilationDatabase: .
    Add:
        - -Wall
        - -Wextra
        - -Wpedantic
        - -Iinclude
        - -std=c++20
    Remove: [-m*, -f*]


Diagnostics:
    UnusedIncludes: Strict
    ClangTidy:
        Add:
            - modernize*
            - performance*
            - bugprone*
            - cppcoreguidelines*
            - readability-redundant*

Completion:
    AllScopes: true

Hover:
    ShowAKA: true

InlayHints:
    Enabled: true
    ParameterNames: true
    DeducedTypes: true
    Designators: true
